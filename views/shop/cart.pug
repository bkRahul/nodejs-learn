extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if cartData.length > 0
            .grid
                each product in cartData
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.productData.title}
                        div.card__image
                            img(src=product.productData.imageUrl, alt=product.productData.title)
                        div.card__content
                            h2.product__price $ #{product.productData.price}
                            p.product__description #{product.productData.description}
                        form(action="/delete-cart-item", method="POST").flex
                            input(type="hidden", name="id" value=product.productData.id)
                            button.btn Delete from Cart
        else
            h1 No Products