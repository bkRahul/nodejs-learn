extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if productData.length > 0
            .grid
                each product in productData
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src=product.imageUrl, alt=product.title)
                        div.card__content
                            h2.product__price $ #{product.price}
                            p.product__description #{product.description}
                        .card__actions
                            a(href="/products/" + product.id).btn Details
                        if isAuth    
                            form(action="/cart", method="POST")
                                input(type="hidden", name="_csrf" value=csrfToken)
                                input(type="hidden", name="id" value=product.id)
                                button Add to Cart
            section.pagination
                if currentPage !== 1 && previousPage !==1
                    a(href="/?page=1") 1
                if hasPreviousPage
                    a(href="/?page="+ previousPage) #{previousPage}
                a(class="active" href="/?page="+ currentPage) #{currentPage}
                if hasNextPage
                    a(href="/?page="+ nextPage) #{nextPage}
                if lastPage !== currentPage && nextPage !== lastPage    
                    a(href="/?page="+ lastPage) #{lastPage}
        else
            h1 No Products